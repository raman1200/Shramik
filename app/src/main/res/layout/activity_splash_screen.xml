<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SplashScreenActivity">

    <LinearLayout
        android:id="@+id/linearProfile"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        style="@style/groupStylewhite_A700">

        <FrameLayout
            android:id="@+id/frameStackshramik"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linearColumnshramik"
                style="@style/groupStylecornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSHRAMIK"
                    style="@style/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_76pxv"
                    android:layout_marginBottom="@dimen/_158pxv"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_shramik" />

            </LinearLayout>

            <ImageView
                app:layout_constraintDimensionRatio="w,208:202"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="208dp"
                android:layout_height="202dp"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/_111pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_111pxh"
                android:scaleType="centerCrop"
                android:src="@drawable/img_ellipse1"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_worker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/animation_500_li7dva49"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtShramikMakean"
            style="@style/txtCabinCondensedregular32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_66pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_66pxh"
            android:layout_marginBottom="@dimen/_8pxv"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_7pxh"
            android:singleLine="true"
            android:text="@string/msg_shramik_make_an" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>